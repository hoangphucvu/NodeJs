extends layout

block content
    if posts
        each post, i in posts
            h1
                a.more(href="/posts/show/#{post._id}")
                    =post.title
            p.meta Posted in #{post.category} by #{post.author} on #{post.date} 
            //-#{moment(post.date).format("MM-DD-YYYY")}
            =post.body
            br
            a.more(href="/posts/show/#{post._id}") Read more
    else
        p.noposts There are no posts to display
